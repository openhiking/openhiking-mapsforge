##################################################################
### National parks and protected areas

scope=way,relation

if (leisure=nature_reserve)
    historic=archaeological_site { delete leisure }
    boundary!~'national_park|protected_area'  { boundary=protected_area }
end

if (boundary=protected_area)
    protect_class~'1a|1b' { protect_class='1'  }
    protected_area=national_park { boundary=national_park}
    protect_class~'21|22|24' | heritage=*  { delete boundary; delete protect_class; stop }

    if (protection_title=*)
        protection_title~'UNESCO Global Geopark|Naturpark' { protected_area_importance=major }
        protection_title='Tájvédelmi körzet'  { protected_area_importance=major }
        protection_title='Chránená krajinná oblasť'  { protected_area_importance=major }
        protection_title='Regijski park'  { protected_area_importance=major }
    end

    () { type=multipolygon; stop }
end    

if (boundary=national_park)
    () { type=multipolygon; stop }
end
